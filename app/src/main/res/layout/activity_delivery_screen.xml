<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!-- Delivery Details -->
        <LinearLayout
            android:id="@+id/layoutDeliveryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp"
            android:background="@drawable/layout_background">

            <TextView
                android:id="@+id/textvieww"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_design"
                android:text="Delivery Details"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="463dp"

                android:layout_marginTop="8dp"
                android:background="@drawable/button_design"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tUserName"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:background="@color/white"
                    android:drawableStart="@drawable/baseline_person_pin_24"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:text="Name"
                    app:layout_constraintBottom_toTopOf="@+id/editTextContactNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/UserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"
                    android:drawableStart="@drawable/baseline_location_on_24"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:text="Address"
                    app:layout_constraintBottom_toTopOf="@+id/editTextContactNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tUserName"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/editTextContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:text="phone"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="14dp"
                    tools:layout_editor_absoluteY="226dp" />


                <TextView
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/white"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:text="phone"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextContactNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/UserAddress"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/notess"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:text="Additonal Delivery notes"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notes"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/btnConfirmDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Delivery"
                android:background="@drawable/button_design"
                android:layout_marginTop="16dp" />
        </LinearLayout>




    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

