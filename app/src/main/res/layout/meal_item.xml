<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="403dp"
        android:background="@drawable/button_design"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/prodImage"
            android:layout_width="106dp"
            android:layout_height="101dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger_meal" />


        <TextView
            android:id="@+id/prodTitle"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/prodImage"
            android:text="Burger Meal Combo"

            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/prodPrice"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/prodTitle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="57dp"
            android:layout_toEndOf="@id/prodImage"
            android:text="ZAR 24.00"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/prodDesc"
            android:layout_width="243dp"
            android:layout_height="41dp"
            android:layout_below="@id/prodPrice"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/prodImage"
            android:maxLines="3"
            android:text="Beef burger, medium chips and a 500ml Coca-Cola Can"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBtn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/prodPrice"
            android:src="@drawable/baseline_add_24"
             />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
